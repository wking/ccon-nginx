{
  "version": "0.5.0",
  "namespaces": {
    "user": {
      "setgroups": false,
      "uidMappings": [
        {
          "containerID": 1,
          "hostID": 1002,
          "size": 1
        }
      ],
      "gidMappings": [
        {
          "containerID": 1,
          "hostID": 1002,
          "size": 1
        }
      ]
    },
    "mount": {
      "mounts": [
        {
          "source": "root",
          "target": "root",
          "flags": [
            "MS_BIND"
          ]
        },
        {
          "source": "/dev",
          "target": "root/dev",
          "flags": [
            "MS_BIND",
            "MS_REC"
          ]
        },
        {
          "target": "root/run",
          "type": "tmpfs"
        },
        {
          "source": "/run/systemd/journal/dev-log",
          "target": "root/run/systemd/journal/dev-log",
          "flags": [
            "MS_BIND"
          ]
        },
        {
          "target": "root/proc",
          "type": "proc"
        },
        {
          "source": "/sys",
          "target": "root/sys",
          "flags": [
            "MS_BIND",
            "MS_REC"
          ]
        },
        {
          "source": "/etc/resolv.conf",
          "target": "root/etc/resolv.conf",
          "flags": [
            "MS_BIND"
          ]
        },
        {
          "source": "tls",
          "target": "root/etc/tls",
          "flags": [
            "MS_BIND"
          ]
        },
        {
          "source": ".static/website",
          "target": "root/srv/static/website",
          "flags": [
            "MS_BIND"
          ]
        },
        {
          "source": ".static/internal-website",
          "target": "root/srv/static/internal-website",
          "flags": [
            "MS_BIND"
          ]
        },
        {
          "source": "root",
          "type": "pivot-root"
        },
        {
          "target": "/tmp",
          "type": "tmpfs"
        },
        {
          "target": "/var/log/nginx",
          "type": "tmpfs"
        },
        {
          "target": "/var/lib/nginx/tmp",
          "type": "tmpfs"
        },
        {
          "target": "/",
          "flags": [
            "MS_REMOUNT",
            "MS_RDONLY",
            "MS_BIND"
          ]
        }
      ]
    },
    "pid": {}
  },
  "process": {
    "user": {
      "uid": 1,
      "gid": 1
    },
    "cwd": "/",
    "capabilities": [],
    "args": [
      "nginx",
      "-g",
      "daemon off;"
    ],
    "env": [
      "PATH=/usr/sbin"
    ]
  },
  "hooks": {
    "post-create": [
      {
        "args": [
          "cp",
          "-L",
          "/etc/localtime",
          "root/etc/localtime"
        ]
      }
    ]
  }
}
